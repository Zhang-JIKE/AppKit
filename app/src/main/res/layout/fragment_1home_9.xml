<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_card"
    android:backgroundTint="@color/appBlue"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="15sp"
        android:textColor="@color/appWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SquareLayout"
        android:fontFamily="@font/inter_medium" />

    <com.jike.uikit.viewgroup.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <com.jike.uikit.view.AppImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/img_01"
            app:appimageview_borderWidth="1dp"
            app:appimageview_radius="8dp"
            android:scaleType="centerCrop"
            app:appimageview_backColor="#00000000"/>

    </com.jike.uikit.viewgroup.SquareLayout>

</LinearLayout>
