<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@drawable/shape_card"
android:padding="12dp"
android:backgroundTint="@color/appBlack3"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:textSize="15sp"
    android:textColor="@color/appWhite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Icon"
    android:fontFamily="@font/inter_medium" />


<com.jike.uikit.viewgroup.AverageSpaceLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <com.jike.uikit.view.AppIcon
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        app:uikit_isForeGradient="true"
        app:uikit_foreStartColor="@color/appOrange"
        app:uikit_foreEndColor="@color/appRed"
        app:appicon_isRender="true" />

    <com.jike.uikit.view.AppIcon
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        app:uikit_isForeGradient="true"
        app:uikit_foreStartColor="@color/appRed"
        app:uikit_foreEndColor="@color/appPurple"
        app:appicon_isRender="true" />

    <com.jike.uikit.view.AppIcon
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        app:uikit_isForeGradient="true"
        app:uikit_foreStartColor="@color/appPurple"
        app:uikit_foreEndColor="@color/appBlue"
        app:appicon_isRender="true" />

    <com.jike.uikit.view.AppIcon
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        app:uikit_isForeGradient="true"
        app:uikit_foreStartColor="@color/appBlue"
        app:uikit_foreEndColor="@color/appGreen"
        app:appicon_isRender="true" />

</com.jike.uikit.viewgroup.AverageSpaceLayout>

</LinearLayout>
