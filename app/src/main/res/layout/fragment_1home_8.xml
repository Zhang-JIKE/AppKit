<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_card"
    android:padding="12dp"
    android:backgroundTint="@color/appBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="15sp"
        android:textColor="@color/appWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:fontFamily="@font/inter_medium" />

    <com.jike.uikit.view.AppSwitch
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        app:uikit_isBackGradient="false"
        app:uikit_backColor="#FFFFFF"
        app:uikit_borderWidth="1dp"
        app:appswitch_checked="true"
        app:appswitch_togglePadding="2dp"
        app:uikit_foreColor="@color/appBlue" />

</LinearLayout>
